    "version": "0.2.0",
    "configurations": [
        {
            "name": "api debug",
            "type": "node",
            "request": "launch",
            "outputCapture": "std",
            "cwd": "${workspaceRoot}/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "start"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "test-api-lambda",
            "type": "node",
            "request": "launch",
            "outputCapture": "std",
            "cwd": "${workspaceRoot}/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "test-api-lambda"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "test-job-runner",
            "type": "node",
            "request": "launch",
            "outputCapture": "std",
            "cwd": "${workspaceRoot}/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "test-job-runner"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}